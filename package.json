{
  "name": "web-afordin",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "dev": "astro dev",
    "preview": "astro preview",
    "lint": "eslint --cache \"src/**/*.{astro,ts}\"",
    "lint:fix": "eslint --cache \"src/**/*.{astro,ts}\" --fix",
    "build": "pnpm check && astro build",
    "check": "astro check --tsconfig tsconfig.json",
    "format": "prettier --cache --write \"./**/*.{js,mjs,css,ts,astro,json,svg,yaml,yml}\"",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "./**/*.{js,mjs,css,ts,astro,json,svg,yaml,yml}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "dependencies": {
    "@astrojs/netlify": "6.6.0",
    "@netlify/blobs": "10.3.3",
    "astro": "5.15.7",
    "clsx": "2.1.1",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.5",
    "@tailwindcss/vite": "4.1.17",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "astro-icon": "1.1.5",
    "eslint": "9.39.1",
    "eslint-config-love": "133.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-astro": "1.5.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "globals": "16.5.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.1",
    "simple-git-hooks": "2.13.1",
    "tailwindcss": "4.1.17"
  }
}
