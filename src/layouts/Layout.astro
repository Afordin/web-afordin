---
import { Font } from 'astro:assets'

import '@/index.css'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Afordin Website</title>
    <Font cssVariable="--font-manrope" preload />
  </head>
  <body>
    <div class="flex w-full flex-col items-center text-white">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  @font-face {
    font-family: 'Aeonik';
    src: url('/fonts/Aeonik-Bold.otf') format('opentype');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
</style>
