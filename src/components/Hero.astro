---
import SaluteHand from '@/components/SaluteHand.astro'
import { getLangFromUrl, useTranslations } from '@/i18n/utils'
import Link from '@/components/Link.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section id="hero" class="relative z-20 flex min-h-screen w-full flex-col items-center justify-center gap-11">
  <div
    class="pointer-events-none absolute inset-0 h-full w-full bg-linear-to-b from-transparent from-65% to-[#100E14] to-95%"
  >
  </div>
  <div class="rounded-full bg-linear-(--gradient-rainbow) p-0.25">
    <div class="group flex items-center gap-3 rounded-full bg-[#100d13] px-5 py-1 text-base">
      <p class="font-manrope font-medium">{t('hero.welcome')} <span class="font-bold">Afordin</span></p>
      <SaluteHand extraClass="group-hover:animate-salute" />
    </div>
  </div>
  <hgroup class="flex flex-col gap-11 px-2 text-center drop-shadow-[0px_4px_13px_rgba(0,0,0,0.25)] lg:px-0">
    <h1 class="text-hero-title font-calsans leading-[1.3] font-bold tracking-[2.5px]">
      {t('hero.title')}
      <br />
      {t('hero.title.second')}
    </h1>
    <p class="text-hero-paragraph">{t('hero.paragraph')}</p>
  </hgroup>
  <Link external asButton to="https://lenguajehtml.com/html/semantica/etiqueta-html-h1/">
    {t('hero.button')}
  </Link>
  <video
    class="pointer-events-none absolute top-0 left-0 -z-10 aspect-video w-full"
    src="/media/header.webm"
    preload="metadata"
    autoplay
    loop
    muted
    playsinline></video>
</section>

<style>
  section {
    mask-image: linear-gradient(to bottom, black 85%, transparent 100%);
  }
</style>
