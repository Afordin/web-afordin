---
const { user } = Astro.props

// Determina si es un card "simple" (solo nombre y fondo blanco)
const isSimple = user.avatar.includes('avatar2') || user.avatar.includes('avatar4') || user.avatar.includes('avatar9')
const simpleClass =
  'flex min-h-[150px] items-center justify-between gap-4 border border-[#6F6F6F] bg-[#DEDEDE] p-6 text-black dark:bg-neutral-300'
const noSimpleClass =
  'text-primary min-h-[369px] border border-[#6F6F6F] bg-[#DEDEDE] p-4 dark:border-white/10 dark:bg-black dark:text-white'
---

<div class:list={['w-full max-w-[410px] overflow-hidden rounded-xl', isSimple ? simpleClass : noSimpleClass]}>
  <div class="flex items-center gap-4">
    <img
      alt="Avatar"
      src={user.avatar}
      class:list={[isSimple ? 'h-18 w-18' : 'h-16 w-16', 'rounded-full object-cover']}
    />
    <div class="flex flex-col">
      <p class="text-2xl font-bold">{user.name}</p>
      <p class:list={[isSimple ? 'dark:text-gray-700' : 'dark:text-gray-300', 'text-xl']}>@{user.username}</p>
    </div>
  </div>

  {
    isSimple ? null : (
      <>
        <div class="my-4 border-t border-dashed border-white/30" />
        <p class="text-base leading-snug font-bold">{user.message}</p>
      </>
    )
  }
</div>
