---
const { user } = Astro.props

// Determina si es un card "simple" (solo nombre y fondo blanco)
const isSimple = user.avatar.includes('avatar2') || user.avatar.includes('avatar4') || user.avatar.includes('avatar9')
---

<div
  class={`rounded-xl w-full max-w-[410px] overflow-hidden ${
    isSimple
      ? 'bg-[#D9D9D9] min-h-[150px] text-black flex items-center justify-between gap-4 p-6'
      : 'bg-black min-h-[369px] text-white p-4 border border-white/10'
  }`}
>
  <div class="flex items-center gap-4">
    <img src={user.avatar} alt="avatar" class={`${isSimple ? 'w-18 h-18' : 'w-16 h-16'} rounded-full object-cover`} />
    <div class="flex flex-col">
      <p class="text-2xl font-bold">{user.name}</p>
      <p class="text-xl text-[#7B7B7B]">@{user.username}</p>
    </div>
  </div>

  {
    isSimple ? null : (
      <>
        <div class="my-4 border-t border-dashed border-white/30" />
        <p class="text-base leading-snug">{user.message}</p>
      </>
    )
  }
</div>
